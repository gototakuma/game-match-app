<h2>掲示板作成</h2>
<%= form_with model: @bulletin_board, url: bulletin_board_create_path, method: :post, local: true do |f| %>
  <%= f.label :title%>
  <%= f.text_field :title, class: 'form-control' %>
  <%= f.label :description %>
  <%= f.text_area :description, class: 'form-control' %>
  <br/>
  <%= f.submit '作成', class: 'btn btn-primary' %>
<% end %>

<hr />

<h2>一覧</h2>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">タイトル</th>
      <th scope="col">投稿数</th>
    </tr>
  </thead>
  <tbody>
    <% @bulletin_boards.each do |bulletin| %>
      <tr>
        <td style="width: 15%"><%= bulletin.id %></td>
        <td style="width: 60%">
          <%= link_to bulletin.title, bulletin_board_show_path(bulletin.id) %>
        </td>
        <td style="width: 25%"><%= bulletin.message_posts.size %></td>
      </tr>
    <% end %>
  </tbody>
</table>